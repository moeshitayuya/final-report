#include <iostream>
#include <time.h>
#include <vector>
#include <string>
#include <fstream>
using namespace std;

class score {
	int points;
	int runner;
public:
	void setpoints(int newpoints) { points = newpoints; }
	int getpoints() { return points; }
	void setrunner(int newrunner) { points = newrunner; }
	int getrunner() { return runner; }
};


int main(void) {
	int a,b;
	int p;
	p = 0;
	int r;
	r = 0;
	vector<int> vec;

	for (int out = 0; out <= 2;){
		
		srand(time(NULL));

		printf("Enterキーを押してバッティングをしよう");
		getchar();

		a = rand() % 6 + 1;
		b = rand() % 6 + 1;

		int x;
		x = a + b;
		if (x == 2) {
			cout << "スリーベースヒット" << endl;
			vec.push_back(3);
			if (p % 4 == 0) {
				p += 3;
			}
			else if (p % 4 == 1){
				p += 6;
			}
			else if (p % 4 == 2) {
				p += 5;
			}
			else {
				p += 4;
			}
		}

		if (x == 3) {
			cout << "内野ゴロ" << endl;
			out += 1;
		}

		if (x == 4) {
			cout << "フェンス直撃ツーベースヒット" << endl;
			vec.push_back(2);
			if (p % 4 == 0) {
				p += 2;
			}
			else if (p % 4 == 1) {
				p += 2;
			}
			else if (p % 4 == 2) {
				p += 4;
			}
			else {
				p += 3;
			}
		}

		if (x == 5) {
			cout << "ヒット" << endl;
			vec.push_back(1);
				if (p % 4 == 3) {
					p += 2;
				}
				else {
					p += 1;
				}
		}

		if (x == 6) {
			if (out == 2) {
				cout << "ヒット" << endl;
				vec.push_back(1);
				if (p % 4 == 3) {
					p += 2;
				}
				else {
					p += 1;
				}
			}
			else {
				cout << "バント" << endl;
				out += 1;
				if (p % 4 == 0) {
				}
				else {

					p += 1;
				}
			}
		}

		if (x == 7) {
			cout << "外野フライ" << endl;
			out += 1;
			if (p % 4 == 3) {
				p += 1;
			}
			else {

			}
		}

		if (x == 8) {
			cout << "テキサスヒット" << endl;
			vec.push_back(1);
			if (p % 4 == 3) {
				p += 2;
			}
			else {
				p += 1;
			}
		}

		if (x == 9) {
			cout << "内野フライ" << endl;
			out += 1;
		}

		if (x == 10) {
			cout << "フォアボール" << endl;
			if (p % 4 == 3) {
				p += 2;
			}
			else {
				p += 1;
			}
		}

		if (x == 11) {
			cout << "ゲッツー（ランナー無しなら１アウト）" << endl;
			if (p % 4 == 0) {
				out += 1;
			}
			else {
				out += 2;
				if (p % 4 == 1) {
					p -= 1;
				}
				else if (p % 4 == 2) {
					p -= 2;
				}
				else {
					p -= 3;
				}
			}
		}

		if (x == 12) {
			cout << "ホームラン" << endl;
			vec.push_back(4);
			if (p % 4 == 1) {
				p += 7;
			}
			else if (p % 4 == 2) {
				p += 6;
			}
			else if (p % 4 == 3) {
				p += 5;
			}
			else {
				p += 4;
			}
		}

		cout << out << "アウト" << endl;
		r = p % 4;
		cout << "残塁は" << r << "です" << endl;
	}

	cout << "３アウトチェンジ" << endl;
	cout << "" << endl;
	cout << "今回のヒットは" << endl;
	for (auto i = vec.begin(); i != vec.end(); ++i) {
		cout << *i << "塁打" << ",";
	}
	cout << "でした" << endl;
	cout << "ヒット数は合計" << vec.size() << "本でした" << endl;
	double point;
	point = 0;
	point = floor(p / 4);
	if (point <= 5 && point >= 3) {
		cout << "今回の得点は" << point << "点です" << endl;
		cout << "ゲームクリア" << endl;
	}
	else if (point >= 6) {
		cout << "今回の得点は" << point << "点です" << endl;
		cout << "ビックイニング達成" << endl;
		cout << "セルフヒーローインタビューをして下さい" << endl;
	}
	else {
		cout << "今回の得点は" << point << "点です" << endl;
		cout << "ゲームオーバー" << endl;
	}

	ofstream datafile("score.txt", ios_base::out);
	datafile << "得点" << point << "," << "残塁" << r << endl;
	datafile.close();
	vector<score> score;
	int points;
	int runner;
	ifstream infile("score.txt");
	while (infile >> points >> runner) {
		score.emplace_back();
		score[score.size() - 1].setpoints(points);
		score[score.size() - 1].setrunner(runner);
	}
	infile.close();

	return 0;
}
